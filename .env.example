# Storage Provider Configuration
# Choose one: local, s3, azure, or gcs
STORAGE_PROVIDER=local

# ===== Local Filesystem Storage =====
# Used when STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=./storage
BASE_URL=http://localhost:5000

# ===== AWS S3 Storage =====
# Used when STORAGE_PROVIDER=s3 or s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_DEFAULT_REGION=us-east-1  # Alternative to AWS_REGION

# ===== Azure Blob Storage =====
# Used when STORAGE_PROVIDER=azure
# Option 1: Connection String (Recommended)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string

# Option 2: Account Name and Key (for SAS token generation)
# AZURE_STORAGE_ACCOUNT_NAME=your_account_name
# AZURE_STORAGE_ACCOUNT_KEY=your_account_key

# ===== Google Cloud Storage =====
# Used when STORAGE_PROVIDER=gcs
# Option 1: Use Replit's built-in GCS (Replit environment only)
USE_REPLIT_OBJECT_STORAGE=false

# Option 2: Use your own GCP credentials
GCP_PROJECT_ID=your_gcp_project_id
GCP_KEY_FILENAME=path/to/service-account-key.json

# ===== Object Storage Configuration =====
# Required for all providers
PUBLIC_OBJECT_SEARCH_PATHS=/bucket-name/public,/another-bucket/assets
PRIVATE_OBJECT_DIR=/bucket-name/private

# ===== Database Configuration =====
DATABASE_URL=your_postgresql_connection_string

# ===== Session Configuration =====
SESSION_SECRET=your_session_secret_key_here

# ===== Server Configuration =====
NODE_ENV=development
PORT=5000
